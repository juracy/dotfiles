    "techdocs",
    "trello",
    "Truthy",
    "v",
    "vel",
    "version",
    "version√°vel",
    "whatsapp",
    "youtube"
  ],
  "materialTheme.accent": "Pink",
  "material-icon-theme.activeIconPack": "angular_ngrx",
  "code-runner.fileDirectoryAsCwd": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "ahk": "autohotkey",
    "applescript": "osascript",
    "autoit": "autoit3",
    "bat": "cmd /c",
    "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "clojure": "lein exec",
    "coffeescript": "coffee",
    "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "crystal": "crystal",
    "csharp": "scriptcs",
    "d": "cd $dir && dmd $fileName && $dir$fileNameWithoutExt",
    "dart": "dart",
    "fsharp": "fsi",
    "go": "go run",
    "groovy": "groovy",
    "haskell": "runhaskell",
    "haxe": "haxe --cwd $dirWithoutTrailingSlash --run $fileNameWithoutExt",
    "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
    "javascript": "node",
    "julia": "julia",
    "lua": "lua",
    "nim": "nim compile --verbosity:0 --hints:off --run",
    "objective-c": "cd $dir && gcc -framework Cocoa $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "ocaml": "ocaml",
    "pascal": "cd $dir && fpc $fileName && $dir$fileNameWithoutExt",
    "perl": "perl",
    "perl6": "perl6",
    "php": "php",
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "python": "python3",
    "r": "Rscript",
    "racket": "racket",
    "ruby": "ruby",
    "rust": "cd $dir && rustc $fileName && $dir$fileNameWithoutExt",
    "scala": "scala",
    "shellscript": "bash",
    "swift": "swift",
    "typescript": "ts-node",
    "vbscript": "cscript //Nologo"
  },
  "typescript.format.insertSpaceAfterSemicolonInForStatements": false,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.tsserver.log": "off",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Enable per-language
  "[asciidoc]": {
    "editor.wordWrap": "on"
  },
  "plantuml.server": "https://kroki.io/plantuml",
  "plantuml.render": "PlantUMLServer",
  "plantuml.urlFormat": "svg",
  "asciidoc.extensions.enableKroki": true,
  "vs-kubernetes": {
    "vs-kubernetes.namespace": "",
    "vs-kubernetes.kubectl-path": "/usr/bin/kubectl",
    "vs-kubernetes.helm-path": "/usr/bin/kubectl",
    "vs-kubernetes.draft-path": "",
    "vs-kubernetes.minikube-path": "",
    "vs-kubernetes.kubectlVersioning": "user-provided",
    "vs-kubernetes.outputFormat": "yaml",
    "vs-kubernetes.kubeconfig": "",
    "vs-kubernetes.knownKubeconfigs": [],
    "vs-kubernetes.autoCleanupOnDebugTerminate": false,
    "vs-kubernetes.nodejs-autodetect-remote-root": true,
    "vs-kubernetes.nodejs-remote-root": "",
    "vs-kubernetes.nodejs-debug-port": 9229,
    "checkForMinikubeUpgrade": true,
    "logsDisplay": "webview",
    "imageBuildTool": "Docker"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "errorLens.fontWeight": "100",
  "errorLens.exclude": [
    "Unknown word.",
    "\"Kg\": Forbidden word\\."
  ],
  "hadolint.hadolintPath": "/usr/bin/hadolint",
  "redhat.telemetry.enabled": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "remote.SSH.defaultExtensions": [
    "gitpod.gitpod-remote-ssh"
  ],
  "git.enableSmartCommit": true,
  "settingsSync.ignoredSettings": [
    "configurationSync.store"
  ],
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false
  }
}
