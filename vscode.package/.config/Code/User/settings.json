// Place your settings in this file to overwrite the default settings
{
  // Core
  "accessibility.dimUnfocused.enabled": true,
  "accessibility.dimUnfocused.opacity": 0.6,
  "breadcrumbs.enabled": true,
  "diffEditor.renderSideBySide": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeLensFontFamily": "Ubuntu",
  "editor.codeLensFontSize": 12,
  "editor.columnSelection": false,
  "editor.fontFamily": "Iosevka, Victor Mono, Noto Color Emoji, JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 20,
  "editor.fontWeight": "100",
  "editor.formatOnSave": false,
  "editor.guides.bracketPairs": false,
  "editor.inlineSuggest.enabled": true,
  "editor.language.brackets": [],
  "editor.letterSpacing": 0.5,
  "editor.lineHeight": 1.35,
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "selection",
  "editor.semanticHighlighting.enabled": true,
  "editor.snippetSuggestions": "top",
  "editor.stickyScroll.enabled": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 4,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?‚ü®‚ü©‚Äú‚Äù",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.autoUpdate": "onlySelectedExtensions",
  "extensions.ignoreRecommendations": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.jinja": "html",
    "*.html": "html",
    ".pylintrc": "ini",
    ".env": "ini"
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/.venv": true,
    "**/typings": true,
    "**/.DS_Store": true,
    "**/target": true,
    "**/build": true,
    "**/dist": true,
    "**/__pycache__": true,
    "**/*.cache": true,
    "**/diag-????????????????????????????????.*": true,
    "**/.sass-cache": true,
    "**/.angular/cache": true,
    "**/staticfiles": true,
    "**/CVS": true,
    "**/*.js": { "when": "$(basename).ts" },
    "**/*.js.map": true
  },
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.untrackedChanges": "separate",
  "http.proxyStrictSSL": false,
  "js/ts.implicitProjectConfig.experimentalDecorators": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/yarn-error.log": true,
    "**/yarn.lock": true,
    "**/coverage/**/*.html": true,
    "**/bower_components": true,
    "**/typings": true,
    "**/.git": true,
    "**/.venv": true,
    "**/target": true,
    "**/build": true,
    "**/dist": true,
    "**/__pycache__": true,
    "**/*.cache": true,
    "**/diag-????????????????????????????????.*": true,
    "**/.sass-cache": true,
    "**/staticfiles": true,
    "**/*.min.*": true,
    "**/CVS": true,
    "**/*.js": { "when": "$(basename).ts" },
    "**/*.js.map": true
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontFamily": "Iosevka",
  "terminal.integrated.fontSize": 20,
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash"
    },
    "zsh": {
      "path": "/bin/sh",
      "args": [
        "-c",
        "[ -e /bin/zsh ] && /bin/zsh || ([ -e /bin/bash ] && /bin/bash || /bin/sh)"
      ]
    }
  },
  "terminal.integrated.tabs.enabled": true,
  "window.dialogStyle": "custom",
  "window.titleSeparator": " üüÑ ",
  "window.zoomLevel": 2,
  "workbench.preferredDarkColorTheme": "Solarized Dark",
  "workbench.editor.empty.hint": "hidden",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "activityBarBadge.background": "#FF4081",
    "list.activeSelectionForeground": "#FF4081",
    "list.inactiveSelectionForeground": "#FF4081",
    "list.highlightForeground": "#FF4081",
    "scrollbarSlider.activeBackground": "#FF408150",
    "editorSuggestWidget.highlightForeground": "#FF4081",
    "textLink.foreground": "#FF4081",
    "progressBar.background": "#FF4081",
    "pickerGroup.foreground": "#FF4081",
    "tab.activeBorder": "#FF4081",
    "notificationLink.foreground": "#FF4081",
    "editor.findWidgetResizeBorder": "#FF4081",
    "editorWidget.border": "#FF4081",
    "editorWidget.resizeBorder": "#FF4081",
    "settings.modifiedItemIndicator": "#FF4081",
    "settings.headerForeground": "#FF4081",
    "panelTitle.activeBorder": "#FF4081",
    "breadcrumb.activeSelectionForeground": "#FF4081",
    "menu.selectionForeground": "#FF4081",
    "menubar.selectionForeground": "#FF4081",
    "editor.findMatchBorder": "#FF4081",
    "selection.background": "#FF408140"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },

  // Plugins
  "TodoParser": {
    "exclude": ["cpp", "c"],
    "folderExclude": [
      "node_modules",
      ".vscode",
      "bower_components",
      "dist",
      "CVS",
      ".git",
      "coverage"
    ],
    "markers": ["TODO:"],
    "autoDefaultMarkers": true
  },
  "emojisense.languages": {
    "asciidoc": true,
    "markdown": true,
    "git-commit": true,
    "toml": true,
    "html": true,
    "plaintext": {
      "markupCompletionsEnabled": false,
      "emojiDecoratorsEnabled": false
    },
    "python": true
  },
  "cSpell.language": "pt-BR,en,pt",
  "cSpell.userWords": [
    "adoc",
    "Antora",
    "automatiz",
    "automatiz√°vel",
    "backend",
    "beta",
    "chmod",
    "config",
    "confirmacao",
    "consts",
    "conteinerizada",
    "conteinerizados",
    "Deserialize",
    "devs",
    "devtools",
    "exclusao",
    "Gitlab",
    "gmail",
    "Indenta√ß√£o",
    "Injectable",
    "io",
    "Iosevka",
    "Juracy",
    "k",
    "Kg",
    "Kubernetes",
    "kustomization",
    "kustomize",
    "lemo",
    "Microservice",
    "Microservices",
    "Microsservi√ßos",
    "ngxs",
    "o",
    "paginator",
    "pytest",
    "pythonic",
    "pyth√¥nica",
    "readonly",
    "referenci",
    "referenci√°vel",
    "s",
    "saas",
    "serializa",
    "serializa√ß√£o",
    "stdlib",
