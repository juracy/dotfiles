// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "colorize_brackets": true,
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "double_click_in_multibuffer": "open",
  "vim_mode": false,
  "icon_theme": "Catppuccin Mocha",
  "file_scan_exclusions": [
    "**/*.min.css",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "theme": {
    "mode": "dark",
    "dark": "Nu Disco Dark",
    "light": "Ayu Light"
  },
  "experimental.theme_overrides": {
    "ghost_element.selected": "#33324a"
  },
  "buffer_font_family": "Iosevka",
  "buffer_font_weight": 300,
  "buffer_font_size": 18.0,
  "buffer_line_height": { "custom": 1.5 },
  "buffer_font_features": { "calt": true, "dlig": true },
  "languages": {
    "Angular": {
      "format_on_save": "on",
      "preferred_line_length": 100
    },
    "TypeScript": {
      "format_on_save": "on"
    },
    "JSONC": {
      "format_on_save": "off"
    },
    "HTML": {
      "indent_guides": {
        "enabled": true
      },
      "language_servers": ["angular", "..."],
      "format_on_save": "on",
      "preferred_line_length": 100
    },
    "AsciiDoc": {
      "soft_wrap": "editor_width"
    },
    "JSON": {
      "format_on_save": "on"
    },
    "Python": {
      "format_on_save": "on",
      "formatter": [
        { "code_action": "source.fixAll.ruff" },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["typos", "zuban", "ruff", "ty", "cspell"]
    }
  },
  "edit_predictions": {
    "provider": "zed",
    "mode": "subtle"
  },
  "agent": {
    "default_model": {
      "provider": "ollama",
      "model": "llama3.2:latest"
    }
  },
  "lsp": {
    "angular": {
      "initialization_options": {
        "angular_language_server_version": "19.2.4",
        "typescript_version": "5.8.3"
      }
    }
  },
  "sticky_scroll": {
    "enabled": true
  },
  "tabs": { "file_icons": true },
  "ui_font_family": "SF Font",
  "ui_font_weight": 100.0,
  "ui_font_size": 20.0,
  "formatter": "prettier",
  "format_on_save": "off",
  // "disable_ai": true,
  "prettier": {
    "allowed": true,
    "plugins": ["@prettier/plugin-oxc"]
  }
}
