// Place your settings in this file to overwrite the default settings
{
	"editor.fontFamily": "Operator Mono XLight, Noto Color Emoji",
	"editor.fontSize": 18,
	"search.exclude": {
		"**/node_modules": true,
		"**/yarn-error.log": true,
		"**/yarn.lock": true,
		"**/coverage/**/*.html": true,
		"**/bower_components": true,
		"**/typings": true,
		"**/.git": true,
		"**/.venv": true,
		"**/target": true,
		"**/build": true,
		"**/dist": true,
		"**/__pycache__": true,
		"**/*.cache": true,
		"**/diag-????????????????????????????????.*": true,
		"**/.sass-cache": true,
		"**/staticfiles": true,
		"**/*.min.*": true,
		"**/CVS": true,
		"**/*.js": { "when": "$(basename).ts"},
		"**/*.js.map": true
	},
	"files.exclude": {
		"**/node_modules": true,
		"**/.git": true,
		"**/.venv": true,
		"**/typings": true,
		"**/.DS_Store": true,
		"**/target": true,
		"**/build": true,
		"**/dist": true,
		"**/__pycache__": true,
		"**/*.cache": true,
		"**/diag-????????????????????????????????.*": true,
		"**/.sass-cache": true,
		"**/staticfiles": true,
		"**/CVS": true,
		"**/*.js": { "when": "$(basename).ts"},
		"**/*.js.map": true
	},
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.associations": {
		"*.jinja": "html"
	},
	"editor.fontLigatures": true,
	"editor.tabSize": 4,
	"editor.renderWhitespace": "all",
	"editor.mouseWheelZoom": true,
	"python.linting.pylintEnabled": false,
	"python.linting.flake8Enabled": true,
	"terminal.integrated.shell.linux": "/bin/zsh",
	"editor.snippetSuggestions": "top",
	"http.proxyStrictSSL": false,
	"git.confirmSync": false,
	"window.zoomLevel": 1,
	"typescript.referencesCodeLens.enabled": true,
	"workbench.colorTheme": "Dracula",
	"workbench.iconTheme": "material-icon-theme",
	"extensions.autoUpdate": false,
	"TodoParser": {
		"exclude": ["cpp", "c"],
		"folderExclude": ["node_modules", ".vscode", "bower_components", "dist", "CVS", ".git", "coverage"],
		"markers": ["TODO:"],
		"autoDefaultMarkers": true
	},
	"python.linting.pep8Path": "pycodestyle",
	"extensions.ignoreRecommendations": false,
	"typescriptHero.imports.insertSemicolons": false,
	"editor.letterSpacing": 0.25,
	"vscodeWorkspaceSwitcher.paths": [
		"/home/juracy/workspace/vscode-workspaces"
	],
	"explorer.confirmDragAndDrop": false,
	"material-icon-theme.activeIconPack": "angular_ngrx",
	"javascript.implicitProjectConfig.experimentalDecorators": true,
	"git.autofetch": true,
	"diffEditor.ignoreTrimWhitespace": true,
	"terminal.integrated.fontSize": 14,
	"explorer.confirmDelete": false,
	"gitlens.keymap": "chorded",
	"search.location": "panel",
	"AsciiDoc.html_generator": "docker run -v $(pwd):$(pwd) juracy/asciidoctor:latest asciidoctor -o-",
	"gitlens.advanced.messages": {
		"suppressCommitHasNoPreviousCommitWarning": false,
		"suppressCommitNotFoundWarning": false,
		"suppressFileNotUnderSourceControlWarning": false,
		"suppressGitVersionWarning": false,
		"suppressLineUncommittedWarning": false,
		"suppressNoRepositoryWarning": false,
		"suppressResultsExplorerNotice": false,
		"suppressShowKeyBindingsNotice": true
	},
	"typescript.format.insertSpaceAfterSemicolonInForStatements": false,
	"emojisense.languages": {
		"markdown": true,
		"html": true,
		"plaintext": {
			"markupCompletionsEnabled": false,
			"emojiDecoratorsEnabled": false
		},
		"git-commit": true
	},
	// Enable per-language
	"[asciidoc]": {
		"editor.wordWrap": "on"
	},
	"[typescript]": {
		"editor.formatOnSave": true
	}
}
